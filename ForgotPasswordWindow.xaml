<Window x:Class="EFM.ForgotPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Forgot Password" Height="250" Width="400">
    <Grid Background="#f5f5f5">
        <StackPanel Margin="20">
            <TextBlock Text="Forgot Password" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="Enter your email address:" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Height="30" Margin="0,0,0,20" Padding="5"/>
            <Button Content="Send Reset Link" Height="35" Background="#0078D7" Foreground="White" Click="SendResetLink_Click"/>
        </StackPanel>
    </Grid>
</Window>
