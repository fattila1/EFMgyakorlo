<Window x:Class="EFM.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="450" Width="350" Background="#f5f5f5">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Register" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <TextBlock Text="Username" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Height="30" Margin="0,0,0,10" Padding="5"/>
            <TextBlock Text="Email" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Height="30" Margin="0,0,0,10" Padding="5"/>
            <TextBlock Text="Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30" Margin="0,0,0,10" Padding="5"/>
            <TextBlock Text="Captcha: Enter the number below" Margin="0,0,0,5"/>
            <TextBlock x:Name="CaptchaText" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="CaptchaInput" Height="30" Margin="0,0,0,10" Padding="5"/>
            <Button Content="Register" Height="35" Background="#0078D7" Foreground="White" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
