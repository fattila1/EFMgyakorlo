<Window x:Class="EFM.Tasks.Solution2Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Solution 2 - Gravitációs középpont-módszer" Height="500" Width="600">
    <StackPanel Margin="10">
        <TextBlock Text="Gravitációs középpont-módszer - Megoldás" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
        <DataGrid x:Name="SolutionDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Telephely" Binding="{Binding Telephely}" />
                <DataGridTextColumn Header="X" Binding="{Binding X}" />
                <DataGridTextColumn Header="Y" Binding="{Binding Y}" />
                <DataGridTextColumn Header="Súly" Binding="{Binding Suly}" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock x:Name="LevezetesText" TextWrapping="Wrap" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
