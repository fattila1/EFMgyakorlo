<Window x:Class="EFM.Tasks.Task6Window"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task 6 - Multiplication" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Enter a number:" Margin="5" />
            <TextBox x:Name="InputTextBox" Margin="5" />
            <Button Content="Calculate" Click="CalculateButton_Click" Margin="5" />
            <TextBlock x:Name="ResultTextBlock" Margin="5" FontWeight="Bold" />
        </StackPanel>
    </Grid>
</Window>