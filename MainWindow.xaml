<Window x:Class="EFM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EFM - Login"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#f5f5f5">
    <Grid>
        <Border CornerRadius="10" Background="White" Padding="20" Margin="50">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#333333" HorizontalAlignment="Center"/>
                <TextBlock Text="Username" Margin="0,0,0,5" Foreground="#555555"/>
                <TextBox x:Name="UsernameTextBox" Height="30" Width="250" Margin="0,0,0,20" Padding="5"/>
                <TextBlock Text="Password" Margin="0,0,0,5" Foreground="#555555"/>
                <PasswordBox x:Name="PasswordBox" Height="30" Width="250" Margin="0,0,0,20" Padding="5"/>
                <Button Content="Login" Background="#0078D7" Foreground="White" Height="35" Width="250" Click="LoginButton_Click" HorizontalAlignment="Center"/>
                <TextBlock Text="Forgot Password?" Foreground="#0078D7" HorizontalAlignment="Center" Margin="0,10,0,0" Cursor="Hand" MouseDown="ForgotPassword_Click"/>
                <Button Content="Register" Background="#0078D7" Foreground="White" Height="35" Width="250" Margin="10,20,0,0" Click="RegisterButton_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
